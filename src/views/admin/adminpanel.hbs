            <div class="logo">
                <img src="/images/logo/logo.png" alt="">
                <span>SOLTEC ADMIN</span>
            </div>
            <div class="toggle">
                <i class='bx bx-menu'></i>
            </div>
        </div>
        <!-- INPUT SEARCH -->
        {{!-- <div class="input-search">
