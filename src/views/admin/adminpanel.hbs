    <script>
        // Función para recargar la página cada 5 segundos (5000 milisegundos)
        function recargarPagina() {
            location.reload();
        }

        // Establece la frecuencia de actualización en milisegundos (5 segundos en este caso)
        var intervaloDeActualizacion = 600000;

        // Configura un temporizador para llamar a la función de recarga cada cierto tiempo
        setInterval(recargarPagina, intervaloDeActualizacion);
    </script>
    

    <script src="/js/scriptadmin.js"></script>
</body>
